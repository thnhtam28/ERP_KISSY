                        $("#DiscountTab4").val(0);
                        tinh_tong_tien4();
                        totalKm = 0;
                    } else if (tab3 == 0 && tab1 == 0 && tab2 == 0 && tab4 == 0 && tab5 == 1 && tab6 == 0) {
