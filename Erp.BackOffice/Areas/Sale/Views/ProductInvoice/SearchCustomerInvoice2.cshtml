    }
    @*cái này search cus*@
    <div class="product-search-box">
        <select id="CustomerSelectList" name="CustomerSelectList" style="width:75%">
            @foreach (var item in Model)
            {
                <option value="@item.Id" data-selected="0" data-value="@item.Id|@("<b>"+item.FullName==null?"null":item.FullName +"</b>") | @(item.Mobile==null?"null":item.Mobile)" data-customer-id="@item.Id" data-customerame="@(item.FullName==null?"null":item.FullName)" data-taxcode="@(item.TaxCode==null?"null":item.TaxCode)" data-bankaccount="@(item.BankAccount==null?"null":item.BankAccount)" data-bankname="@(item.BankName==null?"null":item.BankName)" data-address="@(item.Address==null?"null":item.Address)" data-note="@(item.Note==null?"null":item.Note)">@(item.FullName == null ? "null" : item.FullName)</option>
