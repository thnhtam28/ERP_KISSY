                boxSearch: true,
                customId: 2,
                colSearch: 1,
                rcbname:"txtkhachhang"
            });
            //Hiển thị giá và tính thành tiền khi chọn sản phẩm


            $('#CustomerSelectList').on('change', function () {
               
                var $this = $(this);
                var selected = $this.find("option:selected");
               
               
                if (tab3 == 0 && tab1 == 1 && tab2 == 0) {

