@using Erp.BackOffice.Sale.Models
@using Erp.BackOffice.Helpers
@using Erp.Domain.Account.Entities
@using Erp.Domain.Sale.Entities
@using GridMvc.Html

@{
    Layout = null;
}

<div class="row" style="text-align:center">
    <div class="col-xs-12">
        <div class="widget-box">
            <div class="widget-body">
                <div class="widget-main" style="background: #f7f7f7;">
                    <div class="row">
                        <div class="col-sm-5">
                            <img id="avatar" alt="@Model.CompanyName" src="@(Erp.BackOffice.Helpers.Common.KiemTraTonTaiHinhAnh(Model.Image, "uploads_image_path_customer", "user"))" style="width:130px;height:130px;border-radius:100%;border:1px solid #ccc" />
                        </div>
                        <div class="col-sm-7">
                            <div style="color:#337ab7;border-bottom:3px solid" class="top-20"><h3><b>@Model.CompanyName</b></h3></div>
                            <div style="color:#337ab7">@Model.Code</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
