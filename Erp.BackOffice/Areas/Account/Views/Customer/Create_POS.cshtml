<script>

    function selectItemCustomer() {
        if (CheckData() == false) {
            return false;
        };
        var customer = {};
        customer.Code = "@Model.CityId";
        customer.FirstName = document.getElementById("FirstName").value;
        customer.LastName = document.getElementById("LastName").value;
        customer.Gender = document.getElementById("Gender").value;
        customer.Birthday = document.getElementById("Birthday").value;
        customer.Email = document.getElementById("Email").value;
        customer.Mobile = document.getElementById("Mobile").value;
        customer.Note = document.getElementById("Note").value;
        customer.CompanyName = document.getElementById("CompanyName").value;
        customer.Phone = document.getElementById("Phone").value;
        customer.TaxCode = document.getElementById("TaxCode").value;
        customer.BankAccount = document.getElementById("BankAccount").value;
        customer.BankName = document.getElementById("BankName").value;
        customer.Address = document.getElementById("Address").value;
        customer.CityId = document.getElementById("CityId").value;
        customer.DistrictId = document.getElementById("DistrictId").value;
        customer.WardId = document.getElementById("WardId").value;
        var districts = document.getElementById("WardId").value; // cache it

        ShowLoading();
        $.ajax({
            type: "POST",
            url: "/Customer/Create_POS",
            data: JSON.stringify(customer),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                HideLoading();
                if (r > "0") {
                    parent.selectItemCustomer(r, customer.LastName + " " + customer.FirstName + "-" + customer.Code + "(" + customer.Mobile + ")", customer.Address, customer.Mobile);
                } else {
                    $("#danger-alert").fadeTo(2000, 500).slideUp(500, function () {
                        $("#danger-alert").slideUp(500);
                    });
                }
            },
            error: function (xhr, ajaxOptions, thrownError) {
                HideLoading();
                $("#danger-alert").fadeTo(2000, 500).slideUp(500, function () {
                    $("#danger-alert").slideUp(500);
                });
            }
        });






        //$("#ProductInvoiceOldCode_DisplayText").val(name);
        //$("#ProductInvoiceOldId").val(id);
        //$("#CustomerId").val(customerid);
        //$("#CustomerId_DisplayText").val(customername);


    };

    var closePopup = '@ViewBag.closePopup';

    $(document).ready(function () {
        $("#danger-alert").hide();
        //nếu là được gọi theo dạng popup từ form thêm mới hóa đơn thì chạy đoạn code bên dưới
        if (closePopup != '') {
            var option = '<option value="@Model.Id" data-city="@Model.CityId" data-district="@Model.DistrictId" data-ward="@Model.WardId" data-address="/@(string.IsNullOrEmpty(Model.Address) ? "" : Model.Address)/" data-phone="@Model.Phone">@Model.FullName</option>';
            window.parent.ClosePopupAndDoSomethings(option);
        }

        $("[name='Birthday']").mask('99/99/9999');
        $('#Point').numberFormat();
        $("#Code").change(function () {
            $.get('/Customer/CheckCodeExsist?code=' + $(this).val(), function (rs) {
                if (rs != '') {
                    alert(rs);
                }
            });
        });
    });


    $(function () {
        var url = '/api/BackOfficeServiceAPI/FetchLocation';
        var districts = $('#DistrictId'); // cache it
        var ward = $('#WardId');

        $("#CityId").change(function () {
            var id = $(this).val(); // Use $(this) so you don't traverse the DOM again
            $.getJSON(url, { parentId: id }, function (response) {
                districts.empty(); // remove any existing options
                ward.empty();
                $(document.createElement('option'))
                        .attr('value', '')
                        .text('- Rỗng -')
                        .appendTo(ward);
                $(response).each(function () {
                    $(document.createElement('option'))
                        .attr('value', this.Id)
                        .text(capitalizeFirstAllWords(this.Name.toLowerCase().replace('huyện', '').replace('quận', '')))
                        .appendTo(districts);
                });

                districts.trigger("chosen:updated");
            });
        });

        districts.change(function () {
            var id = $(this).val(); // Use $(this) so you don't traverse the DOM again
            $.getJSON(url, { parentId: id }, function (response) {
                ward.empty(); // remove any existing options
                $(response).each(function () {
                    $(document.createElement('option'))
                        .attr('value', this.Id)
                        .text(capitalizeFirstAllWords(this.Name.toLowerCase()))
                        .appendTo(ward);
                });
                ward.trigger("chosen:updated");
            });
        });
    });

</script>
<script>
